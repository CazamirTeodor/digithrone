{
    "name" : "Digithrone",
    "description" : "Stay safe.",
    "version" : "1.0",
    "manifest_version" : 2,
    "background" : {
        "scripts" : ["background.js"]
    },
    
    "permissions" : ["<all_urls>", "activeTab", "storage", "cookies", "webRequest", "webNavigation", "webRequestBlocking", "tabs", "contextMenus"],
    "web_accessible_resources" : [
        "/pages/*"
    ],

    "content_scripts" : [
        {
            "matches" : ["*://localhost/*"],
            "js" : ["/pages/obfuscated/obfuscated.js"],
            "run_at" : "document_end"
        }
    ],
    "browser_action" : {
        "default_popup" : "popup.html",
        "default_icon" : {
            "16": "/images/logo16.png",
            "32": "/images/logo32.png",
            "48": "/images/logo48.png",
            "128": "/images/logo128.png"
        }
    },
    "icons": {
        "16": "/images/logo16.png",
        "32": "/images/logo32.png",
        "48": "/images/logo48.png",
        "128": "/images/logo128.png"
      }
}
