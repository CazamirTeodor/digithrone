{
  "name": "Digithrone",
  "description": "Stay safe.",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "<all_urls>",
    "activeTab",
    "storage",
    "history",
    "downloads",
    "cookies",
    "webRequest",
    "webNavigation",
    "webRequestBlocking",
    "tabs",
    "contextMenus",
    "browsingData"
  ],
  "web_accessible_resources": ["/pages/popup/build/static/css/content.css"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["/pages/popup/build/static/css/app.css"],
      "js": ["/pages/popup/build/static/js/content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/logo16.png",
      "32": "/images/logo32.png",
      "48": "/images/logo48.png",
      "128": "/images/logo128.png"
    }
  },
  "icons": {
    "16": "/images/logo16.png",
    "32": "/images/logo32.png",
    "48": "/images/logo48.png",
    "128": "/images/logo128.png"
  }
}
